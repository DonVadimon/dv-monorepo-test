{
    "packages": ["packages/*"],
    "version": "independent",
    "npmClient": "yarn",
    "useWorkspaces": true,
    "command": {
        "publish": {
            "message": "chore(release): publish new version %s",
            "registry": "https://registry.npmjs.org/"
        }
    },
    "ignoreChanges": [
        "**/*.md",
        "**/*.test.*",
        "**/*.stories.*"
    ]
}
